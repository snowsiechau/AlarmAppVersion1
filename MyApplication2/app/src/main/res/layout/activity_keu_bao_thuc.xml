<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#e1c627">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.vinh.alarmclockandroid.activities.KhoiDong">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trả lời 3 câu hỏi đúng liên tiếp để tắt được Chuông báo thức"
            android:textColor="#f000"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>

        <pl.droidsonroids.gif.GifTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/giphy"
            />

        <Button
            android:id="@+id/batdau_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f000"
            android:text="TRả lời"
            android:layout_margin="20dp"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#002856"/>

    </LinearLayout>
</ScrollView>