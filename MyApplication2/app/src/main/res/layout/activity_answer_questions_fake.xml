<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:fillViewport="true"
    android:scrollbarStyle="insideInset"
    android:scrollbars="vertical"
    android:orientation="vertical"
    android:weightSum="20">

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Answer The Question"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/text_size_20sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"/>

    <ProgressBar
        android:layout_weight="1"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:max="100" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
        <TextView
            android:id="@+id/noidungcauhoi_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10sp"
            android:text="Khi khởi động chương trình and
            roid, file nào là file được chạyffffffffffff
            ffffffffffffffffffffffffffffffffffffffffffffffffffffffff
            ffffffffffffffffffffffffffffffff
            fffdsfdsfffffffffffffffffffffffdsfds
            fsfsdfsdfsdfsdfdsfdsfsdfdsfdsfdsfd
            sfdsfdsfdsfdsfdsfs
            dfdsfdsfdsfdsfdsfdsfdsfdsfsddfdsfsdfdsfdsfdsfdsfdsfdsf
            dsfdsfdsfdsfdsfsdfdsfdsfdsfsdfdsfs
            dfdsfdsfsdfdsfsdfsdfdsfdsfsdfdsfdsfsdfsdfsdfsdfsdfsdfsdfs
            dfsdfsdfsfdsffdsfsdfsdfsdfsdfsd
            fdsfdsfdsfdsfdsfsdfsdfdsfdsfdsf đầu tiên ?"
            android:textAlignment="center"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp" />
    </ScrollView>

    <RadioGroup
        android:id="@+id/dapan_rg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:padding="8dp">

        <RadioButton
            android:id="@+id/dapanA_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A. AndroidManifest.xml"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/dapanB_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B. Tất cả các file đều được chạy cùng một lúc ggggggggggggggggggggggggggggggggggggggggg"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/dapanC_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C. Không có file nào được chạy đầu tiên"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/dapanD_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D. Tất cả các đáp án đều sai"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />

    </RadioGroup>

    <Button
        android:layout_weight="2"
        android:id="@+id/traloi_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Trả lời" />

    <Button
        android:layout_weight="2"
        android:id="@+id/boqua_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Bỏ qua (15 giây)" />

</LinearLayout>
