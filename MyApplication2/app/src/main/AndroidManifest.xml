<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vinh.alarmclockandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_access_alarm_black_24dp"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.AnswerQuestionsActivity" />

        <service
            android:name=".activities.BackgroundMusic"
            android:enabled="true" />

        <receiver android:name=".activities.AlarmReceiver" />

        <activity android:name=".activities.KhoiDong">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.KeuBaoThuc" />
        <activity android:name=".activities.DatBaoThucThanhCong" />
        <activity android:name=".activities.GuideActivity"></activity>
    </application>

</manifest>